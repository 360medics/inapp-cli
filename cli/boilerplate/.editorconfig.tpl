root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.php,composer.json}]
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.sh]
indent_style = tab

[*.feature]
indent_size = 4

[{*.yml, *.yaml}]
indent_size = 4

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[*.ts]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2